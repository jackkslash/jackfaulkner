---
import Layout from "../layouts/index.astro";
import { Links } from "../lib/projects";
import { ProjectData } from "../lib/projects";
---

<Layout>
  <div class="space-y-8">
    <div>
      <h2 class="text-2xl mb-4">sup</h2>
      <p>I'm Jack Faulkner a software engerneer from the United Kingdom.</p>
    </div>
    <div>
      <h2 class="text-2xl mb-6">projects</h2>
      <div class="flex flex-col gap-1">
        {
          ProjectData.map((data) => (
            <div class="text-xl lowercase mb-4">
              <a class="hover:opacity-20 transition"href={data.href}>
                <h1>{data.title}</h1>
              </a>
              <p class="text-sm">{data.description}</p>
            </div>
          ))
        }
      </div>
    </div>

    <div>
      <h2 class="text-2xl">thoughts</h2>
      <h3 class="text-lg">what it do</h3>
    </div>

    <div>
      <h4 class="text-xl mb-4">find me somewhere</h4>
      {
        Links.map((link) => (
          <a
            href={link.href}
            class="lowercase text-blue-400 hover:underline text-1xl"
          >
            <h1> - {link.title}</h1>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
