---
import Layout from "../../layouts/index.astro";
import { WorkData } from "../../lib/data";
---

<Layout>
  <div class="min-h-screen px-6 py-10 md:px-12 md:py-14">
    <header class="flex flex-row items-center justify-between mb-12 md:mb-16">
      <a href="/" class="text-sm text-muted hover:text-primary transition-colors">‚Üê Jack Faulkner</a>
      <nav class="flex gap-6 text-sm text-muted">
        <a href="/projects" class="hover:text-primary transition-colors">Projects</a>
        <a href="/work" class="text-primary">Work</a>
      </nav>
    </header>
    <h1 class="text-2xl font-bold mb-10">Work</h1>
    <ul class="flex flex-col gap-8 max-w-xl">
      {
        WorkData.map((entry) => (
          <li class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 sm:gap-4">
            <div>
              {entry.href ? (
                <a href={entry.href} target="_blank" rel="noopener noreferrer" class={`text-lg font-medium ${entry.company === "Dines" ? "dines-highlight" : "text-primary hover:underline"}`}>
                  {entry.company}
                </a>
              ) : (
                <span class={`text-lg font-medium cursor-default ${entry.company === "Dines" ? "dines-highlight" : "text-primary"}`}>
                  {entry.company}
                </span>
              )}
              <span class="text-muted ml-2">{entry.role}</span>
            </div>
            <span class="text-sm text-muted shrink-0">{entry.period}</span>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
